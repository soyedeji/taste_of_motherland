<div class="container mt-5">
  <h1 class="text-center mb-4">Our Menu</h1>

  <!-- Search and Category Filter -->
  <%= render 'shared/search_and_filter', categories: @categories %>

  <!-- Display Products -->
  <div class="row">
    <% if @menus.any? %>
      <% @menus.each do |menu| %>
        <%= render 'shared/product_card', menu: menu %>
      <% end %>
    <% else %>
      <p class="text-center text-danger">No products match your search criteria.</p>
    <% end %>
  </div>

  <!-- Pagination Controls -->
  <%= render 'shared/pagination_controls', menus: @menus %>
</div>
