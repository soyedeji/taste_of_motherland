<div class="container mt-5">
  <h1 class="text-center mb-4">Our Menu</h1>

  <!-- Category Filter and Search -->
  <div class="row mb-4">
    <div class="col-md-8 offset-md-2">
      <%= form_with url: root_path, method: :get, local: true do |form| %>
        <div class="input-group">
          <!-- Category Dropdown -->
          <%= form.label :category_id, "Filter by Category", class: "input-group-text" %>
          <%= form.collection_select :category_id, @categories, :id, :name, { prompt: "All Categories" }, class: "form-select" %>

          <!-- Search Bar -->
          <%= form.text_field :search, value: params[:search], class: "form-control", placeholder: "Search products..." %>

          <!-- Submit Button -->
          <%= form.submit "Search", class: "btn btn-primary" %>
          <%= link_to "Clear", root_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>

  </div>


  <!-- Display Products -->
  <div class="row">
    <% if @menus.any? %>
      <% @menus.each do |menu| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <% if menu.image.attached? %>
              <%= link_to image_tag(menu.image, class: "card-img-top product-image", alt: menu.name), menu_path(menu) %>
            <% else %>
              <%= link_to image_tag("https://via.placeholder.com/150", class: "card-img-top", alt: "Placeholder"), menu_path(menu) %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to menu.name, menu_path(menu) %></h5>
              <p class="card-text"><%= truncate(menu.description, length: 100) %></p>
              <p class="card-text"><strong>Price:</strong> <%= number_to_currency(menu.price) %></p>
              <p class="card-text">
                <strong>Availability:</strong>
                <%= menu.availability_status ? "Available" : "Unavailable" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">No products found.</p>
    <% end %>
  </div>

  <!-- Pagination Controls -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @menus %>
  </div>
</div>
