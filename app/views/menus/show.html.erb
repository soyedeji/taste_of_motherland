<div class="container">
  <div class="row">
    <div class="col-md-6">
      <% if @menu.image.attached? %>
        <%= image_tag @menu.image, class: "img-fluid", alt: @menu.name %>
      <% else %>
        <%= image_tag "https://via.placeholder.com/300", class: "img-fluid", alt: "Placeholder" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2><%= @menu.name %></h2>
      <p><strong>Category:</strong> <%= @menu.category.name %></p>
      <p><%= @menu.description %></p>
      <p><strong>Price:</strong> <%= number_to_currency(@menu.price) %></p>
      <p><strong>Availability:</strong> <%= @menu.availability_status ? "Available" : "Unavailable" %></p>

      <%= form_with url: add_to_cart_cart_path(@menu), method: :post, local: true do |form| %>
        <div class="form-group">
          <%= form.label :quantity, "Quantity" %>
          <%= form.number_field :quantity, value: 1, min: 1, class: "form-control" %>
        </div>
        <%= form.submit "Add to Cart", class: "btn btn-primary mt-3" %>
      <% end %>

      <%= link_to "Back to Menu", root_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>
