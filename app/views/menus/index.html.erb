<h1>Our Menu</h1>
<div class="menu-list">
  <% @menus.each do |menu| %>
    <div class="menu-item">
      <h2><%= link_to menu.name, menu_path(menu) %></h2>
      <p><%= menu.description %></p>
      <p>Price: <%= number_to_currency(menu.price) %></p>
      <%= link_to "View Details", menu_path(menu), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
